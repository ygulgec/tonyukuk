{
    "comments": {
        "lineComment": "#",
        "blockComment": ["/*", "*/"]
    },
    "brackets": [["(", ")"], ["[", "]"], ["{", "}"]],
    "autoClosingPairs": [
        {"open": "(", "close": ")"},
        {"open": "[", "close": "]"},
        {"open": "{", "close": "}"},
        {"open": "\"", "close": "\""}
    ],
    "surroundingPairs": [
        ["(", ")"], ["[", "]"], ["{", "}"], ["\"", "\""]
    ],
    "folding": {
        "markers": {
            "start": "\\b(işlev|sınıf|eğer|döngü|iken|eşle|dene|her|arayüz|sayım)\\b.*\\bise\\b",
            "end": "\\bson\\b"
        }
    },
    "indentationRules": {
        "increaseIndentPattern": "\\b(ise|yoksa)\\b",
        "decreaseIndentPattern": "\\b(son|yoksa)\\b"
    }
}
